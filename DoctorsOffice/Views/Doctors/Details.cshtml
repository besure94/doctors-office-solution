@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor
@using DoctorsOffice.Models
@using System.Collections.Generic;

<h2>Doctor Details</h2>
<hr/>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Patients.Count == 0)
{
  <h3>This doctor does not have any patients.</h3>
}
else {
  <h4>Patients that this doctor sees:</h4>
  <ul>
    @foreach (Patient patient in Model.Patients)
    {
      string doctorPatients = "";
      @if(patient.JoinEntities.Count == 0)
      {
        doctorPatients = "This patient does not see any doctors.";
      }
      else
      {
        List<string> doctorPatientList = new List<string>();
          @foreach(DoctorPatient join in patient.JoinEntities)
          {
            doctorPatientList.Add(join.Doctor.Name);
          }
          doctorPatients = String.Join(", ", doctorPatientList);
      }
      <li>@patient.Name | Doctors: @doctorPatients</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add new patient", "Create", "Patients")</p>
<p>@Html.ActionLink("Back to doctors", "Index")</p>
