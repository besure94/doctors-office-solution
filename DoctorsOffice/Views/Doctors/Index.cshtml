@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
}

<ul>
  @foreach (Doctor doctor in Model)
  {
    <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId }) | This doctor is currently seeing @doctor.JoinEntities.Count patients.</li>
  }
</ul>

<p>@Html.ActionLink("Add new doctor", "Create")</p>
<p>@Html.ActionLink("View patient count for each doctor", "PatientCount")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>