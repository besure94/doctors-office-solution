@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

<p><strong>Note:</strong>You need to have at least one doctor before you can add a patient.</p>
<p>Go to @Html.ActionLink("this page", "Create", "Doctors") to create a doctor.</p>

<h4>Add a new patient</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Birthdate)
  @Html.TextBoxFor(model => model.Birthdate, "{0:MM/dd/yyyy}", new { type = "date" })
  <br>
  @Html.LabelFor(model => model.Doctor)
  @Html.DropDownList("DoctorId")
  <br>
  <input type="submit" value="Add new patient" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Show all patients", "Index")</p>